model Post {
  id         String     @id @default(uuid())
  title      String // M
  slug       String     @unique // M
  content    String // Content
  imageUrl   String // M + S
  imageAlt   String? // M
  views      Int        @default(0)
  tags       String[] // M
  status     PostStatus @default(published)
  userId     String
  user       User       @relation(references: [id], fields: [userId], onDelete: Cascade)
  categoryId String?
  category   Category?  @relation(references: [id], fields: [categoryId], onDelete: Cascade)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  // ===== Core SEO =====
  seoTitle       String // M
  seoDescription String // M
  canonicalUrl   String // M
  primaryKeyword String? // M

  // ===== Social / OG =====
  ogImage String? // M

  // ===== Author & Dates =====
  author              String? // S
  authorCredentials   String? // S
  authorProfileUrl    String? // S
  authorExperienceYrs Int? // S

  datePublished DateTime @default(now()) // S
  dateModified  DateTime @updatedAt // S
  readingTime   Int? // M + S

  // ===== Medical Review Layer =====
  reviewedBy          String? // S
  reviewerCredentials String? // S
  medicalReviewDate   DateTime? // S

  // ===== Medical Entity Graph =====
  mainEntity        String? // S (PCOS, Acne Vulgaris, Depression)
  medicalSpecialty  String? // S (dermatology, psychology, gynecology)
  medicalConditions String[] // S
  symptoms          String[] // S
  treatments        String[] // S
  medications       String[] // S

  // ===== Freshness / Core Update Shield =====
  lastMedicalUpdate DateTime? // S
  contentVersion    String? // S

  // ===== Search Intent Control =====
  intent String? // S

  // ===== Trust / Legal Proof =====
  editorialPolicyUrl String? // S
  medicalBoardUrl    String? // S
  hasDisclaimer      Boolean @default(true) // S
  riskLevel          String? // S

  // ===== Publisher / Organization Authority =====
  publisherName    String? // S
  publisherUrl     String? // S
  publisherLogoUrl String? // S

  // ===== Citations & Audience =====
  citations      String[] // S (WHO, NIH, Mayo, PubMed)
  targetAudience String? // S (patients, women, parents, adolescents)

  // ===== SEO Control =====
  noIndex Boolean @default(false) // M
}

model Category {
  id        String   @id @default(uuid())
  name      String
  userId    String
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum PostStatus {
  published
  draft
}
